<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_simple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Открыть SimpleTreesFragment"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_nested"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Открыть NestedTreesFragment"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_multiple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Открыть MultipleTreesFragment"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_header_and_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Открыть HeaderAndFooterFragment"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_concat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Открыть ConcatFragment"
            android:textAllCaps="false" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container" />
</LinearLayout>